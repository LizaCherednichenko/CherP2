<Page x:Class="CherP2.Pages.PageAutoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CherP2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введите логин" FontSize="15"/>
            <TextBox x:Name="TbLogin" FontSize="15" Width="200"/>
            <TextBlock Text="Введите пароль" FontSize="15"/>
            <PasswordBox x:Name="PbPass" FontSize="15" Width="200"/>

            <Button x:Name="BtnIn" Content="Войти" FontSize="15" Width="100" Margin="5" Click="BtnIn_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
